{
  "name": "@abcnews/env-utils",
  "version": "5.0.2",
  "description": "Utilities for identifying aspects of your code's execution environment and respectfully interacting with the DOM",
  "license": "MIT",
  "author": "Australian Broadcasting Corporation",
  "contributors": [
    {
      "name": "See git commit history",
      "url": "https://github.com/abcnews/env-utils/graphs/contributors"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abcnews/env-utils.git"
  },
  "bugs": {
    "url": "https://github.com/abcnews/env-utils/issues"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsup src/index.ts --dts --sourcemap --format esm --watch",
    "build": "tsup src/index.ts --dts --sourcemap --format esm",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "release": "np",
    "size": "size-limit",
    "prepare": "husky"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "5 kB"
    }
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@size-limit/preset-small-lib": "^12.0.0",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "np": "^10.2.0",
    "size-limit": "^12.0.0",
    "ts-jest": "^29.0.3",
    "tslib": "^2.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "npm": ">=9",
    "node": ">=20"
  }
}
